<Window x:Class="DogAdoption.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DogAdoption"
        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="imgConfirmDog" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792" Opacity="0.8" Stretch="Fill"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="115,328,0,0" VerticalAlignment="Top" Width="195" Height="66" Click="BtnCancel_Click"/>
        <Button x:Name="btnConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="495,333,0,0" VerticalAlignment="Top" Width="182" Height="61" Click="BtnConfirm_Click"/>
        <TextBox x:Name="txtConfirm" HorizontalAlignment="Left" Height="138" Margin="45,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="473"/>
        <TextBox x:Name="txtDonation" HorizontalAlignment="Left" Height="48" Margin="563,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92"/>
        <Label Content="Donation:" HorizontalAlignment="Left" Margin="563,170,0,0" VerticalAlignment="Top" Height="32" Width="92"/>

    </Grid>
</Window>
