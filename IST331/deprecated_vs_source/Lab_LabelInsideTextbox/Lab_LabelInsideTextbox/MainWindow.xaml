        <TextBox x:Name="txtMain" HorizontalAlignment="Left" Height="23" Margin="47,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Foreground="#FFBDBDBD" Tag="Enter First Name" GotFocus="txtMain_GotFocus" LostFocus="txtMain_LostFocus" Text="Enter First Name" MinHeight="6" TextInput="txtMain_TextInput"/>
