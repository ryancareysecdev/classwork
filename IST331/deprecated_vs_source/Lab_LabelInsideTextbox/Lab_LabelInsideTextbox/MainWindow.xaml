<Window x:Name="winMain" x:Class="Lab_LabelInsideTextbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_LabelInsideTextbox"
        mc:Ignorable="d"
        Title="IST331 Lab - Label Inside Textbox" Height="243.421" Width="426.316" FontSize="14" ResizeMode="NoResize" ContentRendered="winMain_ContentRendered">
